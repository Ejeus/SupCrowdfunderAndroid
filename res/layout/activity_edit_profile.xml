<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditProfileActivity" >

     <Button
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText5"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="Valider" />

    <EditText
        android:id="@+id/lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/firstname"
        android:layout_below="@+id/firstname"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Nom" />

    <EditText
        android:id="@+id/firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_button"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="PrÃ©nom" />

    <EditText
        android:id="@+id/passwordConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password"
        android:layout_below="@+id/password"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="Confirmation mot de passe"
        android:inputType="textPassword" />
    
      <EditText
        android:id="@+id/currentPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordConfirm"
        android:layout_below="@+id/passwordConfirm"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="Mot de passe actuel"
        android:inputType="textPassword" />

      <EditText
          android:id="@+id/password"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/lastname"
          android:layout_below="@+id/lastname"
          android:layout_marginTop="36dp"
          android:ems="10"
          android:hint="Nouveau mot de passe"
          android:inputType="textPassword" >

          <requestFocus />
      </EditText>

</RelativeLayout>
